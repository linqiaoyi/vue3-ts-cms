# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true


[*] # 表示对所有文件适用
charset = utf-8 # 设置文件字符集为 uft-8
indent_size = 2 # 缩进大小
indent_style = space # 缩进风格（tab | space）
end_of_line = lf # 控制换行类型（lf | cr | crlf）
trim_trailing_whitespace = true # 去除行首尾的任意空白字符
insert_final_newline = true # 始终在文件的末尾插入一个新行


# 表示仅对 md 文件适用以下规则
[*.md]
max_line_length = off
trim_trailing_whitespace = false

